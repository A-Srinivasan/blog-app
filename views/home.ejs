<%- include('partials/header') -%>

<h1>Home</h1>
<p>
    <%= homeContent %>        
</p>
    <% posts.forEach(function(post) { %>
        <h1> <%= post.title %> </h1>
        <!-- <p> <%= post.body.substring(0, 100) + "..." %> </p> -->
        <% if((post.body.length)>100) { %>
            <p> 
                <%= post.body.substring(0,100) + " ..." %> 
                <a href="/posts/<%=post.title%>">Read more</a>
            </p>
        <% } else { %> 
            <p> 
                <%= post.body %>
                <a href="/posts/<%=post.title%>">Read more</a> 
            </p>
        <% } %> 
    <% }) %>


<%- include('partials/footer') -%>